<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ll_dues"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/borders"
    android:layout_margin="5dp"
   >
<LinearLayout
    android:id="@+id/firstDueLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:padding="10dp">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Imię i nazwisko: "
        android:textSize="16sp"
        android:textColor="#000000"
        android:layout_margin="10dp"/>
    <TextView
        android:id="@+id/tv_dueNameSurname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:textSize="16sp"
        tools:text="Imię nazwisko"
        android:layout_margin="10dp"/>

</LinearLayout>
<LinearLayout
    android:id="@+id/secondDueLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:padding="10dp"
    android:layout_below="@id/firstDueLayout">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Data podpisania deklaracji: "
        android:textSize="16sp"
        android:textColor="#000000"
        android:layout_margin="10dp"/>


    <TextView
        android:id="@+id/tv_dueDeclarationSignDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:textSize="16sp"
        tools:text="23.01.2022"
        android:layout_margin="10dp"
        />


</LinearLayout>
    <LinearLayout
        android:id="@+id/thirdDueLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="10dp"
        android:layout_below="@id/secondDueLayout"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Kwota zadeklarowana: "
            android:textSize="16sp"
            android:textColor="#000000"
            android:layout_margin="10dp"/>

        <TextView
            android:id="@+id/tv_dueDeclaredMoney"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="#000000"
            tools:text="1200"
            android:layout_margin="10dp"/>

        </LinearLayout>
<LinearLayout
    android:id="@+id/fourthDueLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@id/thirdDueLayout"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:padding="10dp">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rok: "
        android:textSize="16sp"
        android:textColor="#000000"
        android:layout_margin="10dp"/>
    <TextView
        android:id="@+id/tv_dueYear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:textSize="16sp"
        tools:text="2021"
        android:layout_margin="10dp"/>
</LinearLayout>
    <LinearLayout
        android:id="@+id/fifthDueLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/fourthDueLayout"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="10dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Data wpłaty: "
            android:textSize="16sp"
            android:textColor="#000000"
            android:layout_margin="10dp"/>
        <TextView
            android:id="@+id/tv_dueDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:textColor="#000000"
            android:textSize="16sp"
            tools:text="23.01.2022"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/sixthDueLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/fifthDueLayout"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="10dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Kwota: "
            android:textSize="16sp"
            android:textColor="#000000"
            android:layout_margin="10dp"/>
        <TextView
            android:id="@+id/tv_dueMoney"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:textSize="16sp"
            tools:text="1200"
            android:layout_margin="10dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/sixthDueLayout"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="10dp">

        <ImageView
            android:id="@+id/iv_editDue"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="10dp"
            android:contentDescription="image"
            android:foreground="?attr/selectableItemBackgroundBorderless"
            android:scaleType="center"
            android:src="@drawable/ic_edit" />

        <ImageView
            android:id="@+id/iv_deleteDue"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="10dp"
            android:foreground="?attr/selectableItemBackgroundBorderless"
            android:scaleType="center"
            android:src="@drawable/ic_delete" />


    </LinearLayout>

</RelativeLayout>